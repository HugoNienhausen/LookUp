{
  "name": "hackathon-monorepo",
  "version": "1.0.0",
  "description": "Monorepo con React + Vite frontend y Django backend",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\"",
    "dev:frontend": "cd integration && npm run dev",
    "dev:backend": "cd backend && node server.js",
    "install:all": "cd integration && npm install",
    "build": "cd integration && npm install && npm run build",
    "build:frontend": "cd integration && npm run build",
    "start:backend": "cd backend && node server.js"
  },    
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
